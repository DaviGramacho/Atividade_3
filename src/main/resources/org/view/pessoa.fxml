<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.PessoaController"
            prefWidth="600" prefHeight="640"
            style="-fx-background-color: #FFF8DC;">

   <!-- VOLTAR -->
   <Button layoutX="14" layoutY="15" text="VOLTAR"
           style="-fx-background-color: #8d6e63; -fx-text-fill: white;"
           onAction="#voltarPrincipalPessoa">
      <font><Font name="Comic Sans MS Bold" size="12"/></font>
   </Button>

   <!-- TÍTULO -->
   <Label layoutX="250" layoutY="35" text="Pessoa" textFill="#8d6e63">
      <font><Font name="Comic Sans MS Bold" size="37"/></font>
   </Label>

   <!-- Campos de entrada -->
   <Label layoutX="70" layoutY="130" text="Nome:" textFill="#8d6e63">
      <font><Font name="Comic Sans MS Bold" size="15"/></font>
   </Label>
   <TextField fx:id="nomePessoaTextField"
              layoutX="170" layoutY="128"
              prefWidth="300"/>

   <Label layoutX="70" layoutY="180" text="Idade:" textFill="#8d6e63">
      <font><Font name="Comic Sans MS Bold" size="15"/></font>
   </Label>
   <TextField fx:id="idadePessoaTextField"
              layoutX="170" layoutY="178"
              prefWidth="100"/>

   <Label layoutX="70" layoutY="230" text="Altura (m):" textFill="#8d6e63">
      <font><Font name="Comic Sans MS Bold" size="15"/></font>
   </Label>
   <TextField fx:id="alturaPessoaTextField"
              layoutX="170" layoutY="228"
              prefWidth="100"/>

   <Button fx:id="btn_enviar_info_pessoa"
           layoutX="260" layoutY="280"
           text="ENVIAR"
           style="-fx-background-color: #8d6e63; -fx-text-fill: white;"
           onAction="#enviarInfoPessoa">
      <font><Font name="Comic Sans MS Bold" size="13"/></font>
   </Button>

   <!-- Botão para atualizar a idade -->
   <Button fx:id="btn_atualizar_idade"
           layoutX="260" layoutY="320"
           text="ATUALIZAR IDADE"
           style="-fx-background-color: #8d6e63; -fx-text-fill: white;"
           onAction="#atualizarIdadePessoa">
      <font><Font name="Comic Sans MS Bold" size="13"/></font>
   </Button>

   <!-- Tabela de Pessoas -->
   <TableView fx:id="tblView"
              layoutX="50" layoutY="370"
              prefWidth="500" prefHeight="180">
      <columns>
         <TableColumn fx:id="tblNome"
                      text="Nome"
                      prefWidth="180"/>
         <TableColumn fx:id="tblIdade"
                      text="Idade"
                      prefWidth="100"/>
         <TableColumn fx:id="tblAltura"
                      text="Altura (m)"
                      prefWidth="120"/>
      </columns>
   </TableView>

</AnchorPane>
